use files;
use ncurses;

i64 x = 0, y = 0, z = 0;
ui8 _x = 0;
while (_x < 32) {
  str key = ncurses::input();
  // Based on the key press, do an action :)
  table key {
    // example :)
    ["up", "w"] == key -> { y--; }
    ["down", "s"] == key -> { y++; }
    ["left", "a"] == key -> { x--; }
    ["right", "d"] == key -> { x++; }
  }
  x = {
    (x > 32) -> 32;
    (x < 0) -> 0;
    _ -> x;
  };
  y = {
    (x > 32) -> 32;
    (x < 0) -> 0;
    _ -> y;
  };
  z = {
    (x > 32) -> 32;
    (x < 0) -> 0;
    _ -> x;
  };
}
